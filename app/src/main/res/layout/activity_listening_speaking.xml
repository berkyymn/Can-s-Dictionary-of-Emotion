<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="false"
    tools:context=".ListeningSpeakingActivity"
    android:id="@+id/layout_ALS">

    <ImageButton
        android:id="@+id/audioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#000000"
        android:onClick="playAudio"
        app:layout_constraintBottom_toBottomOf="@+id/dialogue2Text"
        app:layout_constraintStart_toEndOf="@+id/dialogue2Text"
        app:layout_constraintTop_toTopOf="@+id/dialogue2Text"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <ImageView
        android:id="@+id/emotionNameText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotionNameText"
        app:srcCompat="@drawable/happy" />

    <TextView
        android:id="@+id/dialogue1Text"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/wonder_speak"
        android:text="Hey my darling how are you girl you look great"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/picture"
        app:layout_constraintStart_toEndOf="@+id/picture"
        app:layout_constraintTop_toTopOf="@+id/picture" />

    <TextView
        android:id="@+id/blank2Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/blank1Text"
        app:layout_constraintStart_toEndOf="@+id/blank1Text"
        app:layout_constraintTop_toTopOf="@+id/blank1Text" />

    <TextView
        android:id="@+id/answer2Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/blue_rounded_corner"
        android:gravity="center"
        android:text="very"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/answer1Text"
        app:layout_constraintStart_toEndOf="@+id/answer1Text" />

    <TextView
        android:id="@+id/answer1Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/blue_rounded_corner"
        android:gravity="center"
        android:text="I"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blank1Text" />

    <TextView
        android:id="@+id/answer3Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/blue_rounded_corner"
        android:gravity="center"
        android:text="happy"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/answer4Text"
        app:layout_constraintTop_toBottomOf="@+id/answer4Text" />

    <TextView
        android:id="@+id/blank3Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/blank2Text"
        app:layout_constraintStart_toEndOf="@+id/blank2Text"
        app:layout_constraintTop_toTopOf="@+id/blank2Text" />

    <TextView
        android:id="@+id/blank1Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture2" />

    <TextView
        android:id="@+id/answer4Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/blue_rounded_corner"
        android:gravity="center"
        android:text="am"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/answer2Text"
        app:layout_constraintTop_toTopOf="@+id/answer2Text" />

    <TextView
        android:id="@+id/blank4Text"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/blank3Text"
        app:layout_constraintStart_toEndOf="@+id/blank3Text"
        app:layout_constraintTop_toTopOf="@+id/blank3Text" />

    <TextView
        android:id="@+id/dialogue2Text"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Hey to you mom"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/picture2"
        app:layout_constraintStart_toEndOf="@+id/picture2"
        app:layout_constraintTop_toTopOf="@+id/picture2" />

    <ImageButton
        android:id="@+id/audioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#000000"
        android:onClick="playAudio_1"
        app:layout_constraintBottom_toBottomOf="@+id/dialogue1Text"
        app:layout_constraintStart_toEndOf="@+id/dialogue1Text"
        app:layout_constraintTop_toTopOf="@+id/dialogue1Text"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <TextView
        android:id="@+id/stageText"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#DA3939"
        android:onClick="goToNext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/picture2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:srcCompat="@drawable/happy" />

    <TextView
        android:id="@+id/inst_text_lsa"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="First, listen and then put the words above into the correct order, please."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintStart_toEndOf="@+id/stageText"
        app:layout_constraintTop_toBottomOf="@+id/answer3Text" />

</androidx.constraintlayout.widget.ConstraintLayout>